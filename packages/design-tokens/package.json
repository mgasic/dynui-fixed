{
  "name": "@dynui/design-tokens",
  "version": "0.1.0",
  "description": "Design token primitives for the DynUI design system.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./build/*": "./build/*"
  },
  "files": ["dist", "build", "README.md"],
  "sideEffects": false,
  "scripts": {
    "build": "node -e \"try{require('fs').rmSync('tsconfig.tsbuildinfo',{force:true})}catch(e){}\" && tsup --config tsup.config.ts && tsc --emitDeclarationOnly -p tsconfig.json",
    "dev": "tsup --config tsup.config.ts --watch",
    "build:css": "pnpm run build && node ./build/generate-css-variables.mjs",
    "test": "cd ../.. && vitest run --config packages/design-tokens/vitest.config.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "node ../../tools/run-eslint-if-files.cjs --config ../../eslint.config.js \"src/**/*.{ts,tsx}\"",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true }); require('fs').rmSync('tsconfig.tsbuildinfo', { force: true })\""
  },
  "devDependencies": {
    "@dynui/build-config": "workspace:*",
    "@dynui/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
