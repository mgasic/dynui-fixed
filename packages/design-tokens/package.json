{
  "name": "@dynui/design-tokens",
  "version": "0.1.0",
  "description": "Design token primitives for the DynUI design system.",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./build/*": "./build/*"
  },
  "files": ["src", "build", "README.md"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "build:css": "node ./build/generate-css-variables.mjs",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint --config ../../tools/eslint-config/react.cjs --ext .ts,.tsx src"
  },
  "devDependencies": {
    "@dynui/build-config": "workspace:*",
    "@dynui/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
