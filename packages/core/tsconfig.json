{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@dynui/design-tokens": ["../design-tokens/src"],
      "@dynui/icons": ["../icons/src"]
    }
  },
  "references": [
    { "path": "../design-tokens" },
    { "path": "../icons" }
  ],
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
